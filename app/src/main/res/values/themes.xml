<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/light1</item>
    <item name="colorPrimaryDark">@color/light1</item>
    <item name="colorAccent">@color/blue</item>

    <item name="android:textColor">@color/gray2</item>
    <item name="android:actionBarSize">@dimen/topbar__height</item>
    <item name="android:dialogTheme">@style/AppDialogTheme</item>

    <item name="selectionColor">@color/blue</item>
    <item name="botbarBG">@color/light1</item>
    <item name="roomselectHandleBG">@color/trasnparent</item>
    <item name="roomselectBodyBG">@color/white__90</item>
  </style>

  <style name="AppTheme.NoActivityAnim">
    <item name="android:windowAnimationStyle">@null</item>
  </style>

  <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <item name="android:windowNoTitle">false</item>
  </style>
</resources>
