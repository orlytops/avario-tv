<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:presetsbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@color/trasnparent">

  <com.tv.avario.widget.ElementsBar
      android:id="@+id/element_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@color/white"
      presetsbar:pageSize="9"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_above="@id/element_bar"
      android:background="@color/white">

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

      <ImageView
          android:id="@+id/image_close"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentRight="true"
          android:background="@drawable/bg_select_element"
          android:clickable="true"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:padding="5dp"
          android:src="@drawable/ic_close"/>

      <ImageView
          android:id="@+id/image_settings"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_alignParentRight="true"
          android:layout_marginRight="40dp"
          android:background="@drawable/bg_select_element"
          android:clickable="true"
          android:focusable="true"
          android:focusableInTouchMode="true"
          android:padding="5dp"
          android:src="@drawable/ic_settings"/>
    </RelativeLayout>
  </RelativeLayout>
</RelativeLayout>