<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:presetsbar="http://schemas.android.com/apk/res-auto"
    xmlns:roomselect="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".activity.MainActivity">

    <!-- Main Content -->
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/elements"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <FrameLayout
                android:id="@+id/controls__holder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <fragment
                    android:name="com.avariohome.avario.fragment.DialFragment"
                    android:id="@+id/dial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </LinearLayout>

        <com.avariohome.avario.widget.ElementsBar
            android:id="@id/elements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?attr/botbarBG"
            presetsbar:pageSize="11"/>

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_marginLeft="275dp"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:background="?attr/topbarBG">

            <ImageButton
                android:id="@+id/devices"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:padding="7dp"
                android:background="@android:color/transparent"/> <!-- android:src="@drawable/ic__dropdown" -->

            <ImageButton
                android:id="@+id/notif"
                android:layout_toRightOf="@id/devices"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:padding="7dp"
                android:background="@android:color/transparent"/>

            <!-- Media Buttons -->
            <ImageButton
                android:id="@+id/prev"
                android:layout_toRightOf="@id/devices"
                android:layout_marginLeft="100dp"
                style="@style/HomeMediaButton"/>
            <ImageButton
                android:id="@+id/play"
                android:layout_toRightOf="@id/prev"
                style="@style/HomeMediaButton"/>
            <ImageButton
                android:id="@+id/next"
                android:layout_toRightOf="@id/play"
                style="@style/HomeMediaButton"/>
            <ImageButton
                android:id="@+id/volume"
                android:layout_toRightOf="@id/next"
                style="@style/HomeMediaButton"/>

            <!-- Mode Buttons -->
            <ImageButton
                android:id="@+id/temperature"
                android:layout_toLeftOf="@+id/bolt"
                style="@style/ModeButton.Head"/>
            <ImageButton
                android:id="@id/bolt"
                android:layout_toLeftOf="@+id/cctv"
                style="@style/ModeButton"/>
            <ImageButton
                android:id="@id/cctv"
                android:layout_toLeftOf="@+id/home"
                style="@style/ModeButton"/>
            <ImageButton
                android:id="@id/home"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                style="@style/ModeButton"/>
        </RelativeLayout>

        <com.avariohome.avario.widget.RoomSelector
            android:id="@+id/selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            roomselect:widgetWidth="275dp"
            roomselect:handleHeight="?attr/actionBarSize"
            roomselect:handleBG="?attr/roomselectHandleBG"
            roomselect:bodyBG="?attr/roomselectBodyBG"/>

        <WebView
            android:id="@+id/webview"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.avariohome.avario.widget.MediaSourcesList
        android:id="@+id/sources"
        android:layout_width="275dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:paddingTop="?attr/actionBarSize"
        android:paddingBottom="?attr/actionBarSize"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:background="#FF333333"/>

</android.support.v4.widget.DrawerLayout>

